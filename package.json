{
  "name": "cap-replication-demo",
  "version": "0.0.1",
  "description": "Demonstrate replication with CAP",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1",
    "@sap-cloud-sdk/connectivity": "^3.25.0",
    "@sap-cloud-sdk/http-client": "^3.25.0",
    "@sap-cloud-sdk/resilience": "^3.25.0",
    "@sap/cds": "^8",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1.7.8",
    "sqlite3": "^5"
  },
  "scripts": {
    "start": "cds run",
    "deploy:local": "cds deploy --with-mocks"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "cov2ap": {
      "plugin": true
    },
    "requires": {
      "messaging": {
        "[development]": {
          "kind": "file-based-messaging"
        }
      },
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "credentials": {
          "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER"
        },
        "[hybrid]": {
          "credentials": {
            "url": "https://sandbox.api.sap.com/s4hanacloud"
          }
        },
        "[production]": {
          "credentials": {
            "destination": "S4HANA"
          }
        }
      }
    }
  }
}
